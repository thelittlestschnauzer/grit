<%= form_for @room do |f| %>
		<%= f.label :room_name %>
		<%= f.text_field :room_name %>
		<br>
		<%= f.label :description %>
		<%= f.text_field :description %>
		<br>
		select a list for your chores:
		<%= f.collection_select :category_id, Category.all, :id, :name %>
		<br>
		Create a New Category for your Chores:
		<%= f.fields_for :category do |c| %>
		<%= c.label :name %>
		<%= c.text_field :name %>
		<% end %>
		
		<%= f.submit %>
	<% end %>